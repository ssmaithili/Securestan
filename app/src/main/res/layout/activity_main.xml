<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/please"


    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="PRN NO"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ETprnno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:hint="Enter Your PRN No."
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ETprnno"
        android:layout_marginTop="40dp"
        android:text="COLLEGE"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/ETcollege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:fontFamily="casual"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter Your College Name"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/BTNnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ETcollege"
        android:layout_below="@+id/ETcollege"
        android:layout_marginTop="60dp"
        android:text="NEXT"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:onClick="nextpage"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>
